{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
  "allowJs": false,
    "incremental": true,
    "baseUrl": ".",
  "types": ["node", "react", "react-dom"],
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@ui/*": ["packages/ui/src/*"],
      "@web/*": ["apps/web/*"]
    }
  }
}
